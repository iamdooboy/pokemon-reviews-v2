{
	"compilerOptions": {
		"target": "ES2016",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/ui/*": ["ui/*"],
			"@/pages/*": ["pages/*"],
			"@/lib/*": ["lib/*"],
			"@/styles/*": ["styles/*"]
		},
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"lib/prisma.js"
	],
	"exclude": ["node_modules"]
}
